% return if ($RT::URI::freeside::IntegrationType ne 'Internal');
<select name="<%$Name%>">
% if ($ShowNullOption) {
  <option value="">-</option>
% }
% for my $tag (qsearch('part_tag', {'disabled' => ''})) {
  <option value="<%$tag->tagnum%>" <% 
  $tag->tagnum == $Default||'' ? 'selected' : ''%>
  ><%$tag->tagname%></option>
% }
</select>
<%init></%init>
<%args>
$ShowNullOption => 1
$Name => undef
$Default => 0
</%args>

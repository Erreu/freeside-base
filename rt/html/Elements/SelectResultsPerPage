<SELECT NAME ="<%$Name%>">
% foreach my $value (@values) {
<OPTION VALUE="<%$value%>" <% $value == $Default && 'SELECTED' %>>
<% shift @labels %>
</OPTION>
% }
</SELECT>

<%INIT>
my @values = qw(0 10 25 50 100);
my @labels = (loc('Unlimited'), qw(10 25 50 100));
</%INIT>
<%ARGS>

$Name => undef
$Default => 50

</%ARGS>

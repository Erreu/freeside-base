<SELECT NAME ="<%$Name%>">
% if ($AllowNull) {
<OPTION VALUE="">-</OPTION>
% }
%for my $option (@types) {
<OPTION VALUE="<%$option%>" <%$option eq $Default && "SELECTED"%>><%loc($option)%></OPTION>
%}
</SELECT>

<%INIT>
my @types;
if ($Scope =~ 'queue') {
   @types = qw(Cc AdminCc);
}
else { 
   @types = qw(Requestor Cc AdminCc);
}
</%INIT>
<%ARGS>
$AllowNull => 1
$Default=>undef
$Scope => 'ticket'
$Name => 'WatcherType'
</%ARGS>

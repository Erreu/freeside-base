<& /Elements/PageLayout,
    current_toptab => $current_toptab,
    current_tab => $current_tab,
    toptabs => $toptabs,
    topactions => $topactions,
    tabs => $tabs,
    actions => $actions,
    subactions => $subactions,
    title => $Title
&>
<a name="skipnav" id="skipnav" accesskey="8"></a>
<%INIT>
my $action;
my $basetopactions = {
	A => { html => $m->scomp('/Elements/CreateTicket')	
		},
	B => { html => $m->scomp('/Elements/SimpleSearch') 
		}
	};
my $basetabs = {     A => { title => loc('Homepage'),
                           path => '',
                         },
                    B => { title => loc('Tickets'),
                        path => 'Search/Listing.html'
                      },
                    E => { title => loc('Configuration'),
                           path => 'Admin/'
                         },
                    K => { title => loc('Preferences'),
                        path => 'User/Prefs.html'
                      },
                    P => { title => loc('Approval'),
                           path => 'Approvals/'
                         },
                 };

if (!defined $toptabs) {
   $toptabs = $basetabs;
}
if (!defined $topactions) {
   $topactions = $basetopactions;
}
                    
  # Now let callbacks add their extra tabs
  $m->comp('/Elements/Callback', 
    topactions => $topactions, 
    toptabs => $toptabs, %ARGS);

</%INIT>
<%ARGS>
$current_toptab => undef
$current_tab => undef
$toptabs => undef
$topactions => undef
$tabs => undef
$actions => undef
$subactions => undef
$Title => undef
</%ARGS>

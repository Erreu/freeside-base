<SELECT NAME="<%$Name%>">
<OPTION VALUE="-1"
%unless ($Default) {
 SELECTED
%}
><&|/l&>Don't refresh this page.</&></OPTION>
%foreach my $value (@refreshevery) {
<OPTION VALUE="<%$value%>"
% if ($value == $Default) {
SELECTED 
% }
><&|/l, $value/60 &>Refresh this page every [_1] minutes.</&></OPTION>
%}
</SELECT>

<%INIT>
my @refreshevery = qw(120 300 600 1200 3600 7200);
</%INIT>
<%ARGS>
$Name => undef
$Default => 0
</%ARGS>

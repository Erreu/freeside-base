        PRIMARY KEY (id)
);
CREATE INDEX Transactions1 ON Transactions (Ticket);
CREATE INDEX Transactions2 ON Transactions (EffectiveTicket);


CREATE TABLE Scrips (
  	id 		SERIAL,	
	Description	VARCHAR(255) DEFAULT '',
	ScripCondition 	INTEGER DEFAULT 0 NOT NULL,
